{
  "extends": "./tsconfig",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./lib",
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*",
    "core/**/*",
    "platforms/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "example/**/*",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "node_modules"
  ]
}
